$(function() {
  $('#reset_password').on('click', function(e){
    $.ajax({
      url: this.href,
      type: 'post',
      data: $.param({ id: "#{params[:id]}" }),
      success: function(){
        alert('Reset password instruction sent.');
      },
      error:function(){
       alert('Error');
      }
    });
    e.preventDefault();
  });
});
