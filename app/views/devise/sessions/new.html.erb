<a class="navbar-brand" href="/" class="scroll-btn" data-no-turbolink='true' style="padding: 2% 10%"><%= image_tag  'logo.png' %></a>
<section id="login-form">
  <div class="v-center">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-8">
          <p><a href="/" data-no-turbolink='true'><%= image_tag 'login-logo.png', class: 'img-responsive img-center' %></a></p>

          <a href="/users/auth/facebook" data-no-turbolink='true'><%= image_tag 'facebook_login.png',
                                                                                class: 'img-responsive img-center img-fb' %></a>
          <h2 class="line">or</h2>
          <div class="space30"></div>

          <% flash.each do |key, message| %>
              <div class="alert alert-<%= flash_type(key.to_s) %> fade in">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <div id="flash_<%= key %>"> <%= sanitize(message) %> </div>
              </div>
          <% end %>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <div class="input-group">
                  <%= f.email_field :email, placeholder: 'Email address', class: 'form-control', autofocus: true %>
                  <span class="input-group-addon">
                        <i class="fa fa-envelope-o fa-lg"></i>
                    </span>
                </div>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <%= f.password_field :password, placeholder: 'Password', class: 'form-control', autofocus: "off" %>
                  <span class="input-group-addon">
                        <i class="fa fa-lock fa-lg"></i>
                    </span>
                </div>
              </div>
              <!--
              <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
              <% end -%>
              -->

              <div class="space30"></div>
              <%= f.submit "Log in", class: 'btn btn-default btn-block btn-blue-i' %>
          <% end %>

          <div class="space10"></div>
          <p class="text-center"><%= link_to "Forgot your password?", new_user_password_path(resource_name) %></p>
          <hr>
          <ul class="nav navbar-nav navbar-right" style="margin-right: 10px;">
            <li><p style="font-size: 14px; margin-right: 10px;"><b>Not a member yet,</b> please sign up here </p></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="sign_up_link">Sign
                up <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li>
                  <a href="<%= new_visitor_registrations_path %>" id="visitor_sign_up_link"><i class="fa fa-headphones"></i>
                    I want to book musicians</a>
                </li>
                <li role="separator" class="divider"></li>
                <li><a href="<%= new_musician_registration_path %>"><i class="fa fa-music"></i> I’m a musician</a>
                </li>
              </ul>
            </li>
          </ul>

          <!-- <div class="space40"></div>
          <p>Don’t have an account?
            <% if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Sign up", new_user_registration_path(resource_name), class: 'btn btn-default btn-blue-t blue-t f-right' %>
            <% end %>
          </p> -->
        </div>
      </div>
    </div>
  </div>
</section>

