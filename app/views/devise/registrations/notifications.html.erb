<div class="pages">
  <div class="container">
    <div class="space40"></div>
    <div class="row">
      <div class="col-md-4 col-xs-12">
        <%= render 'layouts/menu/settings_menu' %>
      </div>
      <div class="col-md-8 col-xs-12">
        <div class="setting">
          <h1>Email Notifications</h1>
          <span class="msg-label">Control when GigBazaar sends you emails</span>
          <hr/>
          <%= form_for current_user, url: set_notifications_path, method: :put do |f| %>
              <% flash.each do |key, message| %>
                  <div class="alert alert-<%= flash_type(key.to_s) %> fade in">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <div id="flash_<%= key %>"> <%= sanitize(message) %> </div>
                  </div>
              <% end %>
              <% if current_user.is_musician? %>
                  <div class="form-group">
                    <h4><b>Activities related to your offers</b></h4>
                    <h5 class="checkbox-inline">
                      <%= f.check_box :notify_create_offer, style: 'margin-top: 0px;' %>
                      Receive an email when you create an offer
                    </h5>
                  </div>
                  <div class="space30"></div>
              <% else %>
                <div class="form-group">
                  <h4><b>Activities related to your offers</b></h4>
                  <h5 class="checkbox-inline">
                    <%#= f.check_box :notify_create_offer, style: 'margin-top: 0px;' %>
                    <span>Receive an email when you Receive an application</span>
                    <span>
                      <select>
                        <option value="volvo">For each application</option>
                        <option value="saab">Daily</option>
                        <option value="mercedes">Weekly</option>
                      </select> 
                    </span>
                  </h5>
                </div>
                <div class="space30"></div>    
              <% end %>
              <div class="form-group">
                <h4><b>Activities related to your bookings</b></h4>
                <h5 class="checkbox-inline">
                  <%= f.check_box :notify_create_booking, style: 'margin-top: 0px;' %>
                  Receive an email when you received a booking request
                </h5>
              </div>
              <% if current_user.is_musician? %>
                  <div class="form-group">
                    <h5 class="checkbox-inline">
                      <%= f.check_box :notify_create_special_offer, style: 'margin-top: 0px;' %>
                      Receive an email when you received a special offer
                    </h5>
                  </div>
              <% end %>
              <div class="form-group">
                <h5 class="checkbox-inline">
                  <%= f.check_box :notify_accept_booking, style: 'margin-top: 0px;' %>
                  Receive an email when a booking request is confirmed
                </h5>
              </div>
              <div class="form-group">
                <h5 class="checkbox-inline">
                  <%= f.check_box :notify_reject_booking, style: 'margin-top: 0px;' %>
                  Receive an email when a booking request is rejected
                </h5>
              </div>
              <div class="form-group">
                <h5 class="checkbox-inline">
                  <%= f.check_box :notify_cancel_booking, style: 'margin-top: 0px;' %>
                  Receive an email when a booking request is cancelled
                </h5>
              </div>
              <div class="form-group">
                <h5 class="checkbox-inline">
                  <%= f.check_box :notify_cancel_confirmed_booking, style: 'margin-top: 0px;' %>
                  Receive an email when a confirmed booking is cancelled
                </h5>
              </div>
              <div class="space30"></div>
              <div class="form-group">
                <h4><b><%= I18n.t('devise.registrations.activities_messages') %></b></h4>
                <h5 class="checkbox-inline">
                  <%= f.check_box :notify_receive_message, style: 'margin-top: 0px;' %>
                  <%= I18n.t('devise.registrations.email_when_message') %>
                </h5>
              </div>
              <div class="row col-sm-6 col-xs-10">
                <%= f.submit "Save", class: 'btn btn-blue-i btn-block' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/blankfooter' %>
