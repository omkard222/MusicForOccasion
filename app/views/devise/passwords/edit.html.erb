<section id="login-form">
  <div class="v-center">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-8">
          <a href="/" data-no-turbolink='true'><%= image_tag 'login-logo.png', class: 'img-responsive img-center' %></a>
          <div class="space30"></div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <% resource.errors.full_messages.each do |message| %>
                  <div class="alert alert-danger %> fade in">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <div id="flash_error"> <%= sanitize(message) %> </div>
                  </div>
              <% end %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-group">
                <div class="input-group">
                  <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: "Password", autocomplete: "off", required: true %>
                  <span class="input-group-addon">
                  <i class="fa fa-lock fa-lg"></i>
                </span>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password confirmation", autocomplete: "off", required: true %>
                  <span class="input-group-addon">
                  <i class="fa fa-lock fa-lg"></i>
                </span>
                </div>
              </div>
              <div class="space30"></div>
              <div class="form-group">
                <%= f.submit "Change my password", class: 'btn btn-default btn-block btn-blue-i btn-reset' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
