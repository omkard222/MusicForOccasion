<section id="login-form">
  <div class="v-center">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-8">
          <a href="/" data-no-turbolink='true'><%= image_tag 'login-logo.png', class: 'img-responsive img-center' %></a>
          <div class="space30"></div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <% resource.errors.full_messages.each do |message| %>
                  <div class="alert alert-danger %> fade in">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <div id="flash_error"> <%= sanitize(message) %> </div>
                  </div>
              <% end %>
              <div class="form-group">
                <div class="input-group">
                  <%= f.email_field :email, placeholder: 'Email address',class: 'form-control', autofocus: true, required: true %>
                  <span class="input-group-addon">
                        <i class="fa fa-envelope-o fa-lg"></i>
                    </span>
                </div>
              </div>
              <div class="space30"></div>
              <%= f.submit "Send me reset password instructions", class: 'btn btn-default btn-block btn-blue-i btn-reset' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

