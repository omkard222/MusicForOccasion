<% flash.each do |key, message| %>
  <div class="row flash_message_index" align="center">
    <div class="alert alert-<%= flash_type(key.to_s) %>">
      <button type="button" class="close" data-dismiss="alert">x</button>
      <div class="flash_message_index_message" id="flash_<%= key %>"> <%= sanitize(message) %> </div>
    </div>
  </div>
<% end %>
