<% if @jobs.blank? %>
    <div align="center">
      <h4>No available Job offers.</h4>
    </div>
<% else %>


  <h3><b> GIGS</b></h3>
  <table class="table spot">
    <col width="10%">
    <col width="20%">
    <col width="5%">
    <col width="13%">
    <col width="5%">
    <col width="5%">

    <col width="15%">
    <col width="5%">
    <col width="5%">
    <col width="5%">
    <col width="12%">

    <thead>
      <tr>
        <th>Propose by</th>
        <th>Details</th>
        <th>Type</th>
        <th>Availabilities</th>
        <th>Location</th>
        <th>Minimum Fans</th>
        <th>Facilities</th>
        <th>Prefered Nationality</th>
        <th>Total Fees</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>
            <div><%= image_tag(job.profile.profile_picture.url, :size=> "70x70", :class=>"img-circle")%></div>
            <% @profile = Profile.find(job.profile_id)%>
            <div><%= link_to job.profile.stage_name, profile_path(@profile) %></div>
          </td>
          <td>
            <div><b><%= job.title%></b></div>
            <div>
              <%= job.description%>
            </div>  
          </td>
          <td>
            <% case job.event_type %>
            <% when 'private_event' %>
              <%= "Private Event" %>
            <% when 'bar_restaurant' %>
              <%= "Bar/Restaurant" %> 
            <% when 'club_lounge' %>
              <%= "Club/Lounge" %>
            <% when 'wedding' %>
              <%= "Wedding" %>
            <% when 'corporate' %>
              <%= "Corporate" %>
            <% when 'festival' %>
              <%= "Festival" %>
            <% when 'charity' %>
              <%= "Charity" %>         
            <% end %>  
          </td>
          <td><%= "#{ job.available_date }" %></td>
          <td><%= job.location%></td>
          <td><%= job.minimum_fb_likes%></td>
          <td>
            <div class="space5"></div>
            <div style="float:left; margin-right: 7%">
              <div><%= image_tag("/images/house.png", :class => 'img-responsive', :size => "25x25")%></div>

              <% if job.accommodation %>
                <div style="margin-left:5px;"><%= image_tag("/images/tick.png", :size=> "25x25")%></div>
              <% else %>
                <div style="margin-left:5px;"><%= image_tag("/images/cross_one.png", :size=> "25x25")%></div>
              <% end %>  
              <div class="space5"></div>
            </div>
            <div style="float:left; margin-right: 7%">  
              <div><%= image_tag("/images/car.png", :class => 'img-responsive', :size => "25x25")%></div>
              <% if job.transportation %>
                <div style="margin-left:5px;"><%= image_tag("/images/tick.png", :size=> "25x25")%></div>
              <% else%>
                <div style="margin-left:5px;"><%= image_tag("/images/cross_one.png", :size=> "25x25")%></div>
              <% end %>  
            </div>
            <div class="space5"></div>
            <div style="float:left">  
              <div><%= image_tag("/images/food.png", :class => 'img-responsive', :size => "25x25")%></i></div>
              <% if job.food_and_beverage %>
                <div style="margin-left:5px;"><%= image_tag("/images/tick.png", :size=> "25x25")%></div>
              <% else %>
                <div style="margin-left:5px;"><%= image_tag("/images/cross_one.png", :size=> "25x25")%></div>
              <% end %>  
            </div>
          </td>
          <td><%= job.country_origin%></td>
          <td>
            <% case job.booking_fee_type %>
            <% when "send_inquiry"%>
              <%= "Quote Requested "%>
            <% when "minimum_fees"%>
              <%= job_fee_or_free(job) %>
            <% end %>  
          </td>
          <td>Still Looking</td>
          <td>
           <% if current_user.present? %>
            <% if current_user.current_profile.facebook_page_likes.present? && current_user.current_profile.facebook_page_likes > 29%>
              <%= link_to "View Offer", send_job_offer_path(job), :class=>"btn btn-send"%>
            <% else %>
              <%= link_to "View Offer", "#", :class => "view_offer btn btn-send" %>
            <% end %>
           <% else %>
              <a class="btn btn-send click_able" onclick="modal_call()">View Offer</a>
           <% end %>      
          </td>
        </tr>
      <% end %>  
    </tbody>
  </table>
<% end %>

