<section class="login-body">
  <div class="container">
    <div class="row">
      <div class="space40"></div>
      <div class="col-lg-8 col-lg-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1 class="panel-title">Offer Details</h1>
          </div>
          <div class="panel-body edit-profile">
            <div class="row">
              <div class="col-md-8 col-md-offset-2">
                <% flash.each do |key, message| %>
                    <div class="alert alert-<%= flash_type(key.to_s) %> fade in">
                      <button type="button" class="close" data-dismiss="alert">x</button>
                      <div id="flash_<%= key %>"> <%= sanitize(message) %> </div>
                    </div>
                <% end %>

                <%= form_for :job do |f| %>
                    <div class="space30"></div>
                    <div class="form-group">
                      <%= f.label :title %>
                      <pre class="form-control"><%= @job.title %></pre>
                    </div>
                    <div class="form-group">
                      <%= f.label :event_type %>
                      <pre class="form-control pre_text_area"><%= @job.event_type %></pre>
                    </div>
                    <div class="form-group">
                      <%= f.label :description %>
                      <pre class="form-control pre_text_area"><%= @job.description %></pre>
                    </div>
                    <div class="form-group">
                      <%= f.label :booking_fee_type %>
                      <pre class="form-control"><%= @job.booking_fee_type %></pre>
                      <div class="form-group">
                        <% case @job.booking_fee_type %>
                        <% when 'send_inquiry' %>
                          <div class="additional for_send_inquiry"><%= t 'services.form.note_for_send_inquiry' %></div>
                        <% when 'free' %>
                          <div class="additional for_free">
                            <% Service.free_fee_types.keys.each do |type| %>
                              <label>
                                <%= f.radio_button :free_fee_type, type, disabled: true %>
                                <%= t("services.form.free_fee_types.#{type}") %>
                              </label>
                              <br>
                            <% end %>
                          </div>
                        <% when 'minimum_fees' %>
                          <div class="additional for_minimum_fees">
                            <div class="row">
                              <div class="col-md-6">
                                <div class="form-group">
                                  <%= f.label :booking_fee %>
                                  <pre class="form-control"><%= convert_to_preferred_currency(@job.currency, @job.booking_fee) %></pre>
                                </div>
                              </div>
                              <div class="col-md-6">
                                <div class="form-group">
                                  <%= f.label :currency %>
                                  <pre class="form-control"><%= preferred_currency_session.upcase %></pre>
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-md-12">
                                <% Service.fee_time_types.keys.each do |type| %>
                                  <label>
                                    <%= f.radio_button :fee_time_type, type, disabled: true%>
                                    <%= t("services.form.fee_time_types.#{type}", minutes_count: @job.minutes_count) %>
                                  </label>
                                  <br>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    <div class="form-group">
                      <%= f.label :food_and_beverage %>
                      <pre class="form-control pre_text_area"><%= @job.food_and_beverage %></pre>
                    </div>
                    <div class="form-group">
                      <% Service.accommodations.keys.each do |accommodation| %>
                        <label>
                          <%= f.radio_button :accommodation, accommodation, disabled: true %>
                          <%= t("services.form.accommodations.#{accommodation}") %>
                        </label>
                        <br>
                      <% end %>
                    </div>
                    <div class="space30"></div>
                <% end %>
                <h3><%= link_to 'Back', :back , class: 'btn btn-default btn-block btn-base' %></h3>
                <div class="space40"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

